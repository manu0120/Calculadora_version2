<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBF5"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="324dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backtextview"
        android:text="TextView"

        app:layout_constraintEnd_toEndOf="@id/guidelinev5"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="42dp"

        tools:layout_editor_absoluteY="48dp"

        />






    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="122dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="292dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="366dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="129dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:text="C"

        android:onClick="limpiarResultado"
        app:layout_constraintBottom_toTopOf="@id/guidelineh2"
        app:layout_constraintEnd_toStartOf="@id/guidelinev2"
        app:layout_constraintStart_toEndOf="@id/guidelinev1"
        app:layout_constraintTop_toTopOf="@id/guidelineh1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="161dp"
        android:layout_height="53dp"
        android:text="DEL"

        android:onClick="borrarNumero"
        app:layout_constraintTop_toTopOf="@id/guidelineh1"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh2"
        app:layout_constraintStart_toStartOf="@id/guidelinev2"
        app:layout_constraintEnd_toEndOf="@id/guidelinev4"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="58dp"
        android:layout_height="51dp"
        android:text="/"

        android:onClick="operacionDividir"
        app:layout_constraintTop_toTopOf="@id/guidelineh1"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh2"
        app:layout_constraintStart_toStartOf="@id/guidelinev4"
        app:layout_constraintEnd_toEndOf="@id/guidelinev5"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="67dp"
        android:layout_height="43dp"
        android:text="7"
        app:layout_constraintTop_toTopOf="@id/guidelineh2"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh3"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:text="8"
        app:layout_constraintTop_toTopOf="@id/guidelineh2"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh3"
        app:layout_constraintStart_toStartOf="@id/guidelinev2"
        app:layout_constraintEnd_toEndOf="@id/guidelinev3" />

    <Button
        android:id="@+id/button8"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:text="9"
        app:layout_constraintTop_toTopOf="@id/guidelineh2"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh3"
        app:layout_constraintStart_toStartOf="@id/guidelinev3"
        app:layout_constraintEnd_toEndOf="@id/guidelinev4" />

    <Button
        android:id="@+id/button9"
        android:layout_width="62dp"
        android:layout_height="44dp"
        android:text="*"
        android:onClick="operacionMultiplicar"

        app:layout_constraintTop_toTopOf="@id/guidelineh2"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh3"
        app:layout_constraintStart_toStartOf="@id/guidelinev4"
        app:layout_constraintEnd_toEndOf="@id/guidelinev5" />

    <Button
        android:id="@+id/button10"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="4"
        app:layout_constraintTop_toTopOf="@id/guidelineh3"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh4"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2" />

    <Button
        android:id="@+id/button11"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/guidelineh3"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh4"
        app:layout_constraintStart_toStartOf="@id/guidelinev2"
        app:layout_constraintEnd_toEndOf="@id/guidelinev3" />

    <Button
        android:id="@+id/button12"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:text="6"
        app:layout_constraintTop_toTopOf="@id/guidelineh3"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh4"
        app:layout_constraintStart_toStartOf="@id/guidelinev3"
        app:layout_constraintEnd_toEndOf="@id/guidelinev4" />

    <Button
        android:id="@+id/button13"
        android:layout_width="59dp"
        android:layout_height="43dp"
        android:text="+"

        android:onClick="operacionSumar"
        app:layout_constraintTop_toTopOf="@id/guidelineh3"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh4"
        app:layout_constraintStart_toStartOf="@id/guidelinev4"
        app:layout_constraintEnd_toEndOf="@id/guidelinev5"/>

    <Button
        android:id="@+id/button14"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:text="1"

        android:onClick="pulsarUno"
        app:layout_constraintTop_toTopOf="@id/guidelineh4"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh5"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2" />

    <Button
        android:id="@+id/button15"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:text="2"
        app:layout_constraintTop_toTopOf="@id/guidelineh4"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh5"
        app:layout_constraintStart_toStartOf="@id/guidelinev2"
        app:layout_constraintEnd_toEndOf="@id/guidelinev3" />

    <Button
        android:id="@+id/button16"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:text="3"
        app:layout_constraintTop_toTopOf="@id/guidelineh4"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh5"
        app:layout_constraintStart_toStartOf="@id/guidelinev3"
        app:layout_constraintEnd_toEndOf="@id/guidelinev4" />

    <Button
        android:id="@+id/button17"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:text="-"
        android:onClick="operacionRestar"
        app:layout_constraintTop_toTopOf="@id/guidelineh4"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh5"
        app:layout_constraintStart_toStartOf="@id/guidelinev4"
        app:layout_constraintEnd_toEndOf="@id/guidelinev5" />

    <Button
        android:id="@+id/button18"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/guidelineh5"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh6"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toEndOf="@id/guidelinev3" />

    <Button
        android:id="@+id/button19"
        android:layout_width="74dp"
        android:layout_height="47dp"
        android:text="."
        app:layout_constraintTop_toTopOf="@id/guidelineh5"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh6"
        app:layout_constraintStart_toStartOf="@id/guidelinev3"
        app:layout_constraintEnd_toEndOf="@id/guidelinev4" />

    <Button
        android:id="@+id/button20"
        android:layout_width="57dp"
        android:layout_height="46dp"
        android:text="="
        android:onClick="operacionIgual"

        app:layout_constraintTop_toTopOf="@id/guidelineh5"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh6"
        app:layout_constraintStart_toStartOf="@id/guidelinev4"
        app:layout_constraintEnd_toEndOf="@id/guidelinev5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="192dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="251dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="308dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="367dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="427dp" />

    <Switch
        android:id="@+id/swNigthMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo oscuro"
        app:layout_constraintEnd_toEndOf="@id/guidelinev5"
        app:layout_constraintTop_toBottomOf="@id/guidelineh6"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>